<div class="container">
    <div class="row text-center">
        <h1>BURGER EATER</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <h2>Ready-to-eat burgers!</h2>
        <ul id="ready-to-eat">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="ready-to-eat">
                <form class="update card-body col-6">
                    {{this.id}}. {{this.burger_name}}
                    <button type="submit" data-id="{{this.id}}" class="devour-btn">DEVOUR</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-sm-12 col-md-6 col-lg-6">
        <h2>Devoured Burgers!</h2>
        <ul id="devoured-burgers">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devoured-burgers">
                {{this.id}}. {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div>
    <form class="create-form">
        <div class="form-group">
            <input class="col-md-3 col-sm-12 center" type="text" id="burger-input" name="name"
                placeholder="Enter a Burger to Eat!">
        </div>
        <button class="addBtn" type="submit">Submit</button> 
    </form>
</div>